<%- layout('layouts/boilerplate') %>

<div class="row">
  <div class="col-md-6">
    <form action="/products" method="post" class="validated-form" novalidate>
      <div class="mb-3">
        <label class="form-label" for="name">Name : </label>
        <input type="text" class="form-control" name="name" id="Product Name" placeholder="name" required>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="name">Image URL : </label>
        <input type="text" class="form-control" name="img" id="img" placeholder="Product Image Url" required>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>

      <div class="mb-3">
        <label for="price" class="form-label">Price:</label>
        <div class="input-group mb-3">
          <span class="input-group-text" id="basic-addon1">$</span>
          <input type="text" name="price" class="form-control" placeholder="Price" required>
        </div>
      </div>

      <div class="mb-3">
        <label for="desc" class="form-label" for="desc">Description</label>
        <textarea class="form-control" name="desc" id="desc" cols="30" rows="5" required></textarea>
      </div>

      <button type="submit" class="btn btn-sm btn-success">Add</button>
    </form>
  </div>
</div>

