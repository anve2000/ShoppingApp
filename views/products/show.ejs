<%- layout('layouts/boilerplate') %>

<section cleass="container">

  <div class="row">
    <div class="col-lg-6">



      <%- include('../partials/flash') %>

      <div class="card" style="width: 18rem;">
        <img src="<%= product.img %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= product.name %></h5>
          <p class="card-text"><%= product.desc %></p>
          <h5 class="card-title">$<%= product.price%></h5>

          <a href="#" class="btn btn-success btn-sm">Buy</a>
          <a href="#" class="btn btn-secondary btn-sm">Add to Cart</a>
          <a href="/products/<%= product._id %>/edit" class="btn btn-info btn-sm">Edit</a>
          <form class="d-inline" action="/products/<%= product._id %>?_method=DELETE" method="post">
            <button class="btn btn-danger btn-sm">Delete</button>
          </form>

        </div>
      </div>
    </div>
</section>

<div class="col-lg-4">
  <h1 class="display-5">Leave Your Reviews</h1>

  <form action="/products/<%= product._id %>/review" method="post" novalidate class="validate-form">
    <div class="mb-3">
      <label class="form-label" for="rating">Rating</label>
      <fieldset class="starability-basic">
        <legend>First rating:</legend>
        <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
        <input type="radio" id="first-rate1" name="rating" value="1" />
        <label for="first-rate1" title="Terrible">1 star</label>
        <input type="radio" id="first-rate2" name="rating" value="2" />
        <label for="first-rate2" title="Not good">2 stars</label>
        <input type="radio" id="first-rate3" name="rating" value="3" />
        <label for="first-rate3" title="Average">3 stars</label>
        <input type="radio" id="first-rate4" name="rating" value="4" />
        <label for="first-rate4" title="Very good">4 stars</label>
        <input type="radio" id="first-rate5" name="rating" value="5" />
        <label for="first-rate5" title="Amazing">5 stars</label>
      </fieldset>
    </div>

    <div class="mb-3">
      <label class="form-label" for="desc">Description</label>
      <textarea class="form-control" cols="30" rows="5" name="comment" min=""></textarea>
    </div>
    <button class="btn btn-success btn-sm">Add Review</button>
  </form>

  <div class="my-3">
    <%for(let review of product.reviews ) {%>
    <div class="card mb-3">
      <!-- <% for(let i=1;i<=review.rating;i++) {%>
            <span>&#9734</span>
        <% } %> -->
      <!-- <h5 class="card-header">Rating: <%=review.rating%> </h5> -->
      <div class="card-body">
        <h3>Rated element name</h3>
        <p class="starability-result" data-rating="<%= review.rating %>">
          Rated: 3 stars
        </p>
        <p class="card-text"><%= review.comment %></p>
        <% if(review.createdAt) {%>
        <p class="text-muted"><%= review.createdAt.toDateString() %></p>
        <% } %>
        <a href="#" class="btn btn-danger btn-sm">Delete</a>
      </div>
    </div>
    <% } %>

  </div>
</div>
</div>